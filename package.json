{
  "name": "connect4",
  "private": true,
  "packageManager": "bun@1.2.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @connect4/server dev & bun run --filter @connect4/client dev",
    "dev:server": "bun run --filter @connect4/server dev",
    "dev:client": "bun run --filter @connect4/client dev",
    "build": "bun run --filter @connect4/client build",
    "typecheck": "bun run --filter @connect4/shared typecheck && bun run --filter @connect4/server typecheck && bun run --filter @connect4/client typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "bun run --filter @connect4/server test",
    "prisma:generate": "bun run --filter @connect4/server prisma:generate",
    "prisma:migrate": "bun run --filter @connect4/server prisma:migrate"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.25.0"
  }
}
