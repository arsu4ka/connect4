{
  "name": "@connect4/server",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "prisma generate && bun run --watch src/index.ts",
    "start": "prisma generate && bun src/index.ts",
    "typecheck": "prisma generate && tsc -p tsconfig.json --noEmit",
    "build": "bun run typecheck",
    "test": "prisma generate && vitest run",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@connect4/shared": "workspace:*",
    "@elysiajs/cors": "^1.1.1",
    "@prisma/adapter-pg": "^7.4.2",
    "@prisma/client": "^7.4.2",
    "@prisma/studio-core": "^0.15.0",
    "elysia": "^1.1.23",
    "pg": "^8.16.3",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^22.13.9",
    "prisma": "^7.0.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
